<svg width="800" height="600" viewBox="0 0 800 600" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- 背景 -->
  <rect width="800" height="600" fill="#EEF2FF" />
  
  <!-- 卡片背景 -->
  <rect x="100" y="50" width="600" height="500" rx="20" fill="white" stroke="#6366F1" stroke-width="3" />
  
  <!-- 卡片標題 -->
  <rect x="150" y="100" width="500" height="60" rx="10" fill="#EEF2FF" />
  <text x="400" y="140" font-family="Arial" font-size="32" font-weight="bold" fill="#4F46E5" text-anchor="middle">英語核心詞彙</text>
  
  <!-- 卡片內容 -->
  <g transform="translate(150, 200)">
    <!-- 單詞卡片1 -->
    <rect width="230" height="150" rx="10" fill="white" stroke="#6366F1" stroke-width="2" />
    <text x="115" y="50" font-family="Arial" font-size="28" font-weight="bold" fill="#4F46E5" text-anchor="middle">Hello</text>
    <line x1="50" y1="70" x2="180" y2="70" stroke="#6366F1" stroke-width="2" />
    <text x="115" y="100" font-family="Arial" font-size="24" fill="#6B7280" text-anchor="middle">你好</text>
    <text x="115" y="130" font-family="Arial" font-size="14" fill="#9CA3AF" text-anchor="middle">Hello, how are you?</text>
  </g>
  
  <g transform="translate(420, 200)">
    <!-- 單詞卡片2 -->
    <rect width="230" height="150" rx="10" fill="white" stroke="#6366F1" stroke-width="2" />
    <text x="115" y="50" font-family="Arial" font-size="28" font-weight="bold" fill="#4F46E5" text-anchor="middle">Goodbye</text>
    <line x1="50" y1="70" x2="180" y2="70" stroke="#6366F1" stroke-width="2" />
    <text x="115" y="100" font-family="Arial" font-size="24" fill="#6B7280" text-anchor="middle">再見</text>
    <text x="115" y="130" font-family="Arial" font-size="14" fill="#9CA3AF" text-anchor="middle">Goodbye, see you tomorrow.</text>
  </g>
  
  <g transform="translate(150, 380)">
    <!-- 單詞卡片3 -->
    <rect width="230" height="150" rx="10" fill="white" stroke="#6366F1" stroke-width="2" />
    <text x="115" y="50" font-family="Arial" font-size="28" font-weight="bold" fill="#4F46E5" text-anchor="middle">Thank you</text>
    <line x1="50" y1="70" x2="180" y2="70" stroke="#6366F1" stroke-width="2" />
    <text x="115" y="100" font-family="Arial" font-size="24" fill="#6B7280" text-anchor="middle">謝謝</text>
    <text x="115" y="130" font-family="Arial" font-size="14" fill="#9CA3AF" text-anchor="middle">Thank you for your help.</text>
  </g>
  
  <g transform="translate(420, 380)">
    <!-- 單詞卡片4 -->
    <rect width="230" height="150" rx="10" fill="white" stroke="#6366F1" stroke-width="2" />
    <text x="115" y="50" font-family="Arial" font-size="28" font-weight="bold" fill="#4F46E5" text-anchor="middle">Friend</text>
    <line x1="50" y1="70" x2="180" y2="70" stroke="#6366F1" stroke-width="2" />
    <text x="115" y="100" font-family="Arial" font-size="24" fill="#6B7280" text-anchor="middle">朋友</text>
    <text x="115" y="130" font-family="Arial" font-size="14" fill="#9CA3AF" text-anchor="middle">She is my best friend.</text>
  </g>
</svg>